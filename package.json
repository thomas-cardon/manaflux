{
  "name": "manaflux",
  "version": "1.6.0",
  "description": "Manaflux downloads automatically your runes, itemsets, and summonerspells and injects them to your League client seamlessly!",
  "main": "main.js",
  "scripts": {
    "build": "build --win",
    "ship": "build --win --ia32 --x64 -p always"
  },
  "keywords": [
    "League of Legends",
    "League",
    "assistant",
    "masteries",
    "runes",
    "perks"
  ],
  "author": { "name": "Ryzzzen", "email": "ryzzzen@protonmail.me" },
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.17.1"
  },
  "dependencies": {
    "@sentry/electron": "^0.8.1",
    "auto-launch": "^5.0.5",
    "cheerio": "^1.0.0-rc.2",
    "chokidar": "^2.0.4",
    "electron-store": "^2.0.0",
    "electron-sudo": "^4.0.12",
    "electron-updater": "^2.22.1",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5"
  },
  "repository": "https://github.com/Ryzzzen/manaflux",
  "build": {
    "appId": "com.github.ryzzzen.manaflux",
    "productName": "ManaFlux",
    "copyright": "Copyright Â© 2018 Ryzzzen",
    "files": [
      "**/*",
      "build/icon.*",
      "!screenshots/*",
      "!*.md",
      "!_config.yml",
      "!docs/*"
    ],
    "nsis": {
      "license": "LICENSE.md"
    }
  }
}
